//--- EndPoint ------------------------------------------------------------------------
material Objects/EndPoint : BaseTransparent
{
        set $diffuse_tex "EndPoint.png"
        set $glow_tex "EndPoint.png"
        set $glow_amount 0.5

        set $ambient "0 0 0 0.2"
        set $diffuse "0 0 0 1"
        set $specular "0 0 0 1"

        technique Glow
        { 
                scheme Scheme/Glow
                pass
                {
                        ambient $glow_amount $glow_amount $glow_amount 1
                        scene_blend alpha_blend
                        depth_write off
                        cull_hardware none
                        cull_software none
                        depth_bias 1
                        
                        vertex_program_ref BaseAmbient_vp
                        { 
                        }   

                        fragment_program_ref BaseAmbient_fp
                        {
                        } 
                        
                        texture_unit GlowMap
                        {
                                texture $glow_tex
                        }
                }
        }  
}

//--- Acid ----------------------------------------------------------------------------
material Objects/Acid
{
        set $diffuse_tex "Acid.png"

        set $ambient "0.95 0.95 0.95 1"
        set $diffuse "0.9 0.9 0.9 1"
        set $specular "0.8 0.8 0.8 1"

        technique Shaders
        { 
                pass
                {
                        ambient $ambient
                        diffuse $diffuse
                        specular $specular
                        scene_blend alpha_blend
                        depth_write off
                        
                        vertex_program_ref BaseAmbient_vp
                        { 
                        }   

                        fragment_program_ref BaseAmbient_fp
                        {
                        } 
                        
                        texture_unit DiffuseMap
                        {
                                scroll_anim 2 2
                                texture $diffuse_tex
                        }
                }
        }  
        technique Glow
        { 
                scheme Scheme/Glow
        }  
        technique Fallback
        { 
                pass
                {
                        ambient $ambient
                        diffuse $diffuse
                        specular $specular
                        scene_blend alpha_blend
                        depth_write off
                        
                        texture_unit DiffuseMap
                        {
                                scroll_anim 2 2
                                texture $diffuse_tex
                        }
                }
        }  
}
