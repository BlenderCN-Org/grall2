//--- Bullet --------------------------------------------------------------------------
material Objects/BulletR : BaseTransparent
{
        set $diffuse_tex "BulletR.png"
        set $glow_tex "BulletR.png"

        set $ambient "0.9 0.9 0.9 1"
        set $diffuse "0.6 0.6 0.6 1"
        set $specular "0.8 0.8 0.8 0.8"

        technique Glow
        { 
                scheme Scheme/Glow
                pass
                {
                        ambient 1 1 1 1
                        
                        vertex_program_ref BaseAmbient_vp
                        { 
                        }   

                        fragment_program_ref BaseAmbient_fp
                        {
                        } 
                        
                        texture_unit GlowMap
                        {
                                texture $glow_tex
                        }
                }
        }  
}
material Objects/BulletB : Objects/BulletR
{
    set $diffuse_tex "BulletB.png"
    set $glow_tex "BulletB.png"
}

